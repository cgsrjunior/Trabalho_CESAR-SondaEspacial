;==========================================================================
;	8000 - 80FF: variáveis de comunicação entre o PP e as INTs
;==========================================================================
	org	h8000
ON:		DW	0	; unsigned short ON
AR:		DW	0	; unsigned short AR
GPS:		DW	0	; unsigned short GPS
DISTANCIA:	DAW	[2]	; unsigned int DISTANCIA
TICK:		DW	0	; unsigned short TICK
CARGA:		DW	0	; unsigned short CARGA
VELOCIDADE:	DW	0	; unsigned short SPEED

;==========================================================================
;	8100: inicialização da interrupcao e perifericos
;==========================================================================
	org	h8100
Inicializacao:
; Inicialização das interrupções
        or      #3,INTE       ; habilita interrupções de teclado e timer 
        mov     #ISR,IVET     ; inicializa endereco da ISR
; Inicialização dos periféricos (teclado, visor e timer)
        mov     #100,TIMDT    ; intervalo do timer = 100 milisegundos
        clr     TECST         ; deixa teclado pronto para receber dados
; Inicialização das variáveis usadas pela Sonda
        mov     #h30,IntD     ; distância = 3.200.000 mm (3,2 km);
        mov     #hD400,IntD+2
        mov     #20000,IntC   ; carga = 20000 mAh (20 Ah);
        clr     IntV          ; velocidade = 0 mm/s (0 km/h);
; Inicialização das variáveis globais e da ISR
        clr     ON
        clr     AR
        clr     GPS
        mov     IntD,DISTANCIA     ; DISTANCIA = d = 3.200.000 mm;
        mov     IntD+2,DISTANCIA+2
        clr     TICK
        clr     CARGA
        clr     VELOCIDADE
        clr     conta_ticks     ; reseta contador de interrupções do timer
	rts	r7
;	
;==========================================================================
;	8200: deve ser chamada a cada 100ms,
;	      para atualizar as informações da Sonda
;==========================================================================
	org	h8200
Sonda:
	; N = 0;
	; if (ON!=0 && AR!=0 && c!=0) N=1;
	clr	Sonda_N
	tst	ON
	beq	_Sonda1
	tst	AR
	beq	_Sonda1
	tst	IntC
	beq	_Sonda1
	mov	#1,Sonda_N
_Sonda1:

	;x = 99 * v;
	mov	#99,-(r6)		; r0:r1 = a x b
	mov	IntV,-(r6)
	mov	#LIB_MULT16,r5
	jsr	r7,SysCall
	add	#4,r6
	
	;if (N!=0) x += 18200;
	tst	Sonda_N
	beq	_Sonda2
	add	#0,r0
	add	#18200,r1
	adc	r0

_Sonda2:

	;v = x / 100;
	mov	#100,-(r6)	; R0:R1 = a/b; R2:R3 = a%b
	mov	#0,-(r6)
	mov	r1,-(r6)
	mov	r0,-(r6)
	mov	#LIB_DIV32,r5
	jsr	r7,SysCall
	add	#8,r6
	mov	r1,IntV
	tst	r0		; if (Overflow) v=65536
	beq	_Sonda3
	mov	#hFFFF,IntV
_Sonda3:
	
	; x = v / 10;
	mov	#10,-(r6)		; R0 = a/b; R1 = a%b
	mov	IntV,-(r6)
	mov	#LIB_DIV16,r5
	jsr	r7,SysCall
	add	#4,r6
	
	; d = d - x
	; if (d<0) d=0;
	sub	r0,IntD+2
	sbc	IntD	
	bge	_Sonda4
	clr	IntD
	clr	IntD+2
_Sonda4:
			
	; if (ON!=0) {
	;	int g;
	;	g=1;
	;	if (AR!=0) g=6;
	;	if (c>=g) c=c-g; else c=0;
	;}
	tst	ON
;	beq	_Sonda5
	beq	_Sonda6
	mov	#1,r0
	tst	AR
	beq	_Sonda51
	mov	#6,r0
_Sonda51:
	cmp	IntC,r0
	blt	_Sonda5
	sub	r0,IntC
	br	_Sonda6
_Sonda5:
	clr	IntC
_Sonda6:

	; if (d==0) v=0;
	tst	IntD
	bne	_Sonda7
	clr	IntV
_Sonda7:

	; if (c==0) ON=0;
	tst	IntC
	bne	_Sonda8
	clr	ON
_Sonda8:

	; SPEED = v;
	mov	IntV,VELOCIDADE
		
	; GPS = d/300;
	mov	#300,-(r6)
	mov	#0,-(r6)
	mov	IntD+2,-(r6)
	mov	IntD,-(r6)
	mov	#LIB_DIV32,r5
	jsr	r7,SysCall
	add	#8,r6
	mov	r1,GPS
	
	; CARGA = c;
	mov	IntC,CARGA

	rts	r7

Sonda_N:	dw	0
IntD:		daw	255,255	; int d
IntC:		dw	65000	; unsigned short c
IntV:		dw	0	; unsigned short v


SysCall:
	add	r5,r5
	jmp	(libTab(r5))
	
LIB_INIT:	EQU	0
LIB_MULT16:	EQU	1
LIB_DIV16:	EQU	2
LIB_MULT32:	EQU	3
LIB_DIV32:	EQU	4

libTab:	DW	_libInit
	DW	_mult16
	DW	_div16
	DW	_mult32
	DW	_div32
	
_libInit:
	rts	r7
	
_mult16:
	clr	r0
	clr	r1
	
	clr	r2
_mult16_1:
	asr	4(r6)
	bcc	_mult16_2
	add	r2,r0
	add	2(r6),r1
	adc	r0
_mult16_2:
	asl	2(r6)
	rol	r2
	tst	4(r6)
	bne	_mult16_1
	rts	r7

_div16:
	mov	r2,-(r6)
	
	clr	r0
	clr	r1
	mov	#16,r2
_div16_1:
	asl	4(r6)
	rol	r1
	asl	r0
	cmp	r1,6(r6)
	beq	_div16_2
	bls	_div16_3
_div16_2:
	sub	6(r6),r1
	or	#1,r0

_div16_3:
	sob	r2,_div16_1
	
	mov	(r6)+,r2
	rts	r7
	
_mult32:
	clr	r0
	clr	r1
	clr	r2
	clr	r3
	clr	r4
	clr	r5
_mult32_1:
	asr	6(r6)
	ror	8(r6)
	bcc	_mult32_2
	
	add	r4,r0
	add	r5,r1
	adc	r0
	add	2(r6),r2
	adc	r1
	adc	r0
	add	4(r6),r3
	adc	r2
	adc	r1
	adc	r0
		
_mult32_2:
	asl	4(r6)
	rol	2(r6)
	rol	r4
	rol	r5
	tst	6(r6)
	bne	_mult32_1
	tst	8(r6)
	bne	_mult32_1
	rts	r7

_div32:
	clr	r0
	clr	r1
	clr	r2
	clr	r3
	mov	#32,r4
_div32_1:
	asl	4(r6)
	rol	2(r6)
	rol	r3
	rol	r2
	asl	r1
	rol	r0
	cmp	r2,6(r6)
	bne	_div32_2
	cmp	r3,8(r6)
	beq	_div32_4
_div32_2:
	bls	_div32_3
_div32_4:
	sub	6(r6),r2
	sub	8(r6),r3
	sbc	r2
	or	#1,r1

_div32_3:
	sob	r4,_div32_1
	rts	r7

;==========================================================================
;       8400 - FEFF - Área para os TRATADORES DE INTERRUPÇÃO
;==========================================================================
	org	h8400
IPSTec:    equ       2 ; máscara para AND: 00000010 (separa bit 1 de INTS)
IPSTecOff: equ     253 ; máscara para OR:  11111101 (desliga bit 1 de INTS)
IPSTim:    equ       1 ; máscara para AND: 00000001 (separa bit 0 de INTS)
IPSTimOff: equ     254 ; máscara para OR:  11111110 (desliga bit 0 de INTS)
;
ISR:
        mov     r0,-(r6) ;
        mov     r1,-(r6) ;
        mov     r2,-(r6) ; salva na pilha o conteudo dos registradores
        mov     r3,-(r6) ; que podem estar sendo usados pelo PP
        mov     r4,-(r6) ;
        mov     r5,-(r6) ;
;
testa_timer:
        mov     INTS,r0
        and     #IPSTim,r0
        beq     testa_teclado
        jsr     r7,timer_interrompeu
        and     #IPSTimOff,INTS      ; desliga indicador de interrupção do timer
;
testa_teclado:
        mov     INTS,r0
        and     #IPSTec,r0
        beq     atendeu_INTs
        jsr     r7,teclado_interrompeu
        and     #IPSTecOff,INTS      ; desliga indicador de interrupção do teclado
;
atendeu_INTs:
        mov     (r6)+,r5 ;
        mov     (r6)+,r4 ;
        mov     (r6)+,r3 ; restaura todos os registradores salvos na pilha
        mov     (r6)+,r2 ; no inú€io do atendimento de interrupções
        mov     (r6)+,r1 ;
        mov     (r6)+,r0 ;
        rti
;
; atende interrupcao do timer 
timer_interrompeu:
        jsr     r7,sonda        ; chama rotina de atualização do estado da sonda a cada 100 ms
;
        inc     conta_ticks     ; incrementa contador de interrupções do timer
        cmp     conta_ticks,#10 ; se interrompeu 10 vezes, passou 1 segundo
        bne     calcula_dist    ; se não, vai calcular a distancia
;
        mov     #1,TICK         ; avisa programa principal que decorreu 1 segundo
        clr     conta_ticks     ; reseta contador de interrupções do timer
calcula_dist:
;> Chamada da subrotina da BibCesar para multiplicar 2 inteiros positivos de 16 bits:
        MOV GPS,R0              ; multiplicando no R0
        MOV #300,R1             ; multiplicador no R1
        JSR R7,_S_MULTIPLICAR
;> No retorno da subrotina:
;> - R0 contém os 16 msbits do produto
        mov R0,DISTANCIA
;> - R1 contém os 16 lsbits do produto
        mov R1,DISTANCIA+2
sai_do_timer:
        rts     r7
;
teclado_interrompeu:
        mov     TECDT,r0        ; salva código ASCII da tecla digitada
        clr     TECST           ; libera a interface de teclado para receber outra tecla
        or      #32,r0          ; OR 001000000B,r0 converte maiúsculas em minúsculas
testa_oO:
        cmp     r0,#'o'         ; se recebeu 'o' ou 'O'
        bne     testa_wW
        not     ON              ; complementa variável ON
        br      sai_do_teclado
testa_wW:
        cmp     r0,#'w'         ; se recebeu 's' ou 'W'
        bne     testa_sS
        inc     AR              ; "liga" a variável AR
        br      sai_do_teclado
testa_sS:
        cmp     r0,#'s'         ; se recebeu 's' ou 'S'
        bne     sai_do_teclado
        clr     AR              ; "desliga" a variável AR
sai_do_teclado:
        rts     r7

; variáveis locais dos tratadores de interrupções
conta_ticks: dw 0

